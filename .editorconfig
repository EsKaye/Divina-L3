# EditorConfig is awesome: https://EditorConfig.org
root = true

# General settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# Solidity files
[*.sol]
indent_size = 4

# Python files
[*.py]
indent_size = 4

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Dockerfiles
[Dockerfile*]
indent_style = space
indent_size = 4
